# Windsurf World Tour Stats API - Production Environment Configuration
# Copy this file to .env.production on the Oracle VM and fill in the values
# Location on VM: /opt/windsurf-api/.env.production

# ============================================================================
# Application Environment
# ============================================================================
API_ENV=production

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info

# ============================================================================
# Database Configuration (Direct Connection - No SSH Tunnel)
# ============================================================================
# On the Oracle VM, connect directly to MySQL Heatwave using internal IP
DB_HOST=10.0.151.92
DB_PORT=3306
DB_NAME=jfa_heatwave_db
DB_USER=admin
DB_PASSWORD=your_password_here

# Database Pool Settings
DB_POOL_SIZE=10

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ENABLED=true
# CORS_ORIGINS=["https://your-frontend-domain.com"]  # Restrict in production
CORS_ORIGINS=["*"]  # Allow all origins (change for production security)

# ============================================================================
# API Configuration
# ============================================================================
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=500

# ============================================================================
# Security Notes
# ============================================================================
# 1. NEVER commit this file to git
# 2. Restrict file permissions: chmod 600 .env.production
# 3. Only readable by the user running the API service
# 4. Update CORS_ORIGINS to specific domains for production
